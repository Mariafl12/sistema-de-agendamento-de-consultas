import java.time.LocalDateTime;

public class Main {
    public static void main(String[] args) {
        Usuario usuario = new Usuario("Maria da Conceição", "maria@exemplo.com", "123456789", "senha123");
        SistemaAgendamento sistema = new SistemaAgendamento();
        
        // Agendamento de uma consulta
        Consulta consulta = new Consulta("Consulta Geral", "Dr. João", LocalDateTime.now().plusDays(3));
        sistema.agendarConsulta(consulta);

        // Visualizando as consultas
        sistema.visualizarConsultas();

        // Cancelando a consulta
        sistema.cancelarConsulta(consulta);
        sistema.visualizarConsultas();
    }
}
